{
  "manifest_version": 3,
  "name": "AdReply",
  "version": "1.0.0",
  "description": "Intelligent Facebook comment advertising assistance for small business owners and marketers",
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  
  "background": {
    "service_worker": "scripts/background-safe.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": [
        "scripts/content-minimal.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "side_panel": {
    "default_path": "ui/sidepanel-modular.html"
  },
  
  "action": {
    "default_title": "Open AdReply",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["ui/*", "assets/*", "data/*", "storage/*"],
      "matches": ["https://www.facebook.com/*"]
    }
  ]
}