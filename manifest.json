{
  "manifest_version": 3,
  "name": "AdReply",
  "version": "1.0.0",
  "description": "Intelligent Facebook comment advertising assistance for small business owners and marketers",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "alarms"
  ],
  
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  
  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*"],
      "js": [
        "scripts/error-handler.js",
        "scripts/logger.js", 
        "scripts/error-integration.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  
  "action": {
    "default_title": "Open AdReply",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["ui/*", "assets/*"],
      "matches": ["https://www.facebook.com/*"]
    }
  ]
}